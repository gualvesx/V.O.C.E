<div id="editClassModal" class="modal-overlay hidden">
    <div class="modal-content">
        <h3 class="text-xl font-bold text-gray-800 mb-4 border-b pb-2">Editar Nome da Turma</h3>
        <div class="mt-4">
            <label for="editClassNameInput" class="block text-sm font-medium text-gray-700 mb-2">Novo nome da turma:</label>
            <input type="text" id="editClassNameInput" class="w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-red-600 outline-none">
        </div>
        <div class="mt-6 flex justify-end gap-3">
            <button onclick="closeModals()" class="inline-block px-6 py-2.5 rounded-md font-semibold text-center uppercase tracking-wider text-sm transition-transform duration-200 transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-offset-2 bg-gray-600 text-white hover:bg-gray-700 focus:ring-gray-500">Cancelar</button>
            <button id="saveClassChangesBtn" class="inline-block px-6 py-2.5 rounded-md font-semibold text-center uppercase tracking-wider text-sm transition-transform duration-200 transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-offset-2 bg-red-700 text-white hover:bg-red-800 focus:ring-red-500">Salvar</button>
        </div>
    </div>
</div>

<div id="editStudentModal" class="modal-overlay hidden">
    <div class="modal-content">
        <h3 class="text-xl font-bold text-gray-800 mb-4 border-b pb-2">Editar Dados do Aluno</h3>
        <div class="space-y-4 mt-4">
            <div>
                <label for="editStudentNameInput" class="block text-sm font-medium text-gray-700 mb-1">Nome Completo:</label>
                <input type="text" id="editStudentNameInput" class="w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-red-600 outline-none">
            </div>
            <div>
                <label for="editStudentCpfInput" class="block text-sm font-medium text-gray-700 mb-1">CPF (Opcional):</label>
                <input type="text" id="editStudentCpfInput" class="w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-red-600 outline-none">
            </div>
            <div>
                <label for="editStudentPcIdInput" class="block text-sm font-medium text-gray-700 mb-1">ID do PC (Opcional):</label>
                <input type="text" id="editStudentPcIdInput" class="w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-red-600 outline-none">
            </div>
        </div>
        <div class="mt-6 flex justify-end gap-3">
            <button onclick="closeStudentModal()" class="inline-block px-6 py-2.5 rounded-md font-semibold text-center uppercase tracking-wider text-sm transition-transform duration-200 transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-offset-2 bg-gray-600 text-white hover:bg-gray-700 focus:ring-gray-500">Cancelar</button>
            <button id="saveStudentChangesBtn" class="inline-block px-6 py-2.5 rounded-md font-semibold text-center uppercase tracking-wider text-sm transition-transform duration-200 transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-offset-2 bg-red-700 text-white hover:bg-red-800 focus:ring-red-500">Salvar Alterações</button>
        </div>
    </div>
</div>

<div id="alertLogsModal" class="modal-overlay hidden">

<body class="bg-white flex flex-col min-h-screen">
    <style>
        /* ============================================
           ANIMAÇÕES DE ENTRADA DO TÍTULO
           ============================================ */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .hero-title {
            animation: fadeInUp 0.8s ease-out 0.2s both;
        }

        .hero-subtitle {
            animation: fadeInUp 0.8s ease-out 0.4s both;
        }

        .hero-button {
            animation: fadeInUp 0.8s ease-out 0.6s both;
        }

        /* ============================================
           CANVAS DE PARTÍCULAS
           ============================================ */
        #particleCanvas {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: 0;
        }

        /* ============================================
           DEGRADÊ DE FUNDO ANIMADO
           ============================================ */
        .hero-section {
            position: relative;
            overflow: hidden;
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 50%, #f0f0f0 100%);
            animation: gradientShift 8s ease infinite;
        }

        @keyframes gradientShift {
            0%, 100% {
                background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 50%, #f0f0f0 100%);
            }
            50% {
                background: linear-gradient(135deg, #f0f0f0 0%, #e9ecef 50%, #f8f9fa 100%);
            }
        }

        /* ============================================
           CONTEÚDO SOBRE AS PARTÍCULAS
           ============================================ */
        .hero-content {
            position: relative;
            z-index: 10;
        }

        /* ============================================
           EFEITO DE HOVER NOS BOTÕES
           ============================================ */
        @keyframes buttonGlow {
            0% {
                box-shadow: 0 0 0 0 rgba(220, 38, 38, 0.7);
            }
            70% {
                box-shadow: 0 0 0 10px rgba(220, 38, 38, 0);
            }
            100% {
                box-shadow: 0 0 0 0 rgba(220, 38, 38, 0);
            }
        }

        .hero-button:hover {
            /* Mantém o brilho e remove a subida */
            animation: buttonGlow 0.6s ease-out;
            /* transform: translateY(-2px); */
            box-shadow: 0 10px 25px rgba(220, 38, 38, 0.3);
        }

        /* Efeito de partículas/brilho sutil ao retirar o mouse */
        .hero-button {
            transition: box-shadow 0.5s ease-out, transform 0.2s ease-out;
        }

        .hero-button:not(:hover) {
            box-shadow: 0 0 10px rgba(220, 38, 38, 0.1); /* Brilho sutil persistente */
        }

        .hero-button:active {
            transform: translateY(0);
            box-shadow: 0 5px 15px rgba(220, 38, 38, 0.2);
        }
    </style>

    <!-- Cabeçalho Padrão SENAI -->

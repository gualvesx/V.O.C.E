{
  "manifest_version": 2,
  "name": "V.O.C.E",
  "version": "1.0",
  "description": "Monitora o tempo de uso de sites e envia para an√°lise.",
  "permissions": [
    "tabs",
    "storage",
    "alarms",
    "nativeMessaging"
  ],

  "background": {
    "scripts": ["js/background.js"]
  },
  
  "browser_specific_settings": {
    "gecko": {
      "id": "vvoce-monitoramento-2025@senai.br",
      "data_collection_permissions": {
        "required": ["none"],
        "optional": []
      }
    }
  },

  "icons": {
    "16": "icons/favicon-16x16.png",
    "32": "icons/favicon-32x32.png",
    "128": "icons/android-chrome-192x192.png"
  }
}